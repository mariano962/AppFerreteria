@model AppFerreteria.Models.Rental

@{
    ViewData["Title"] = "Edit";
}

<body class="FondoRentals">
    

<h4 class="TituloEditCreate animate__animated animate__rotateInDownLeft">Rental</h4>

<div class="row">
    <div class="col-md-4 PalabrasFormularios">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RentalID" />
            <div class="form-group">
                <label asp-for="RentalDate" class="control-label"></label>
                <input asp-for="RentalDate" class="form-control" />
                <span asp-validation-for="RentalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label"></label>
                <select asp-for="ClienteID" class="form-control" asp-items="ViewBag.ClienteID"></select>
                <span asp-validation-for="ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteApellido" class="control-label"></label>
                <input asp-for="ClienteApellido" class="form-control" />
                <span asp-validation-for="ClienteApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteName" class="control-label"></label>
                <input asp-for="ClienteName" class="form-control" />
                <span asp-validation-for="ClienteName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotosierraID" class="control-label"></label>
                <select asp-for="MotosierraID" class="form-control" asp-items="ViewBag.MotosierraID"></select>
                <span asp-validation-for="MotosierraID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoAlfanumericoMotosierra" class="control-label"></label>
                <input asp-for="CodigoAlfanumericoMotosierra" class="form-control" />
                <span asp-validation-for="CodigoAlfanumericoMotosierra" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div><br>
    <a asp-action="Index" class="btn btn-primary">Vovler a la lista</a>
</div>
</body>

