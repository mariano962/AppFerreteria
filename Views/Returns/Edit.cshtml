@model AppFerreteria.Models.Return

@{
    ViewData["Title"] = "Edit";
}

<body class="FondoReturn">
    

<h4 class="TituloEditCreate animate__animated animate__rotateInDownLeft">Devoluciones</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnID" />
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label"></label>
                <select asp-for="ClienteID" class="form-control" asp-items="ViewBag.ClienteID"></select>
                <span asp-validation-for="ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteApellido" class="control-label"></label>
                <input asp-for="ClienteApellido" class="form-control" />
                <span asp-validation-for="ClienteApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteName" class="control-label"></label>
                <input asp-for="ClienteName" class="form-control" />
                <span asp-validation-for="ClienteName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoAlfanumericoMotosierra" class="control-label"></label>
                <input asp-for="CodigoAlfanumericoMotosierra" class="form-control" />
                <span asp-validation-for="CodigoAlfanumericoMotosierra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotosierraID" class="control-label"></label>
                <select asp-for="MotosierraID" class="form-control" asp-items="ViewBag.MotosierraID"></select>
                <span asp-validation-for="MotosierraID" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div><br>

<div>
    <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
</div>

</body>
