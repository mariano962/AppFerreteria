@model AppFerreteria.Models.Motosierra

@{
    ViewData["Title"] = "Crear";
}


<body class="FondoMotosierras">
    
<h4 class="TituloEditCreate animate__animated animate__fadeInUpBig">Crear motosierra</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoAlfanumericoMotosierra" class="control-label"></label>
                <input asp-for="CodigoAlfanumericoMotosierra" class="form-control"  onkeyup="this.value = this.value.toUpperCase()" />
                <span asp-validation-for="CodigoAlfanumericoMotosierra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioMotosierra" class="control-label"></label>
                <input asp-for="PrecioMotosierra" class="form-control" />
                <span asp-validation-for="PrecioMotosierra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Codigodefabrica" class="control-label"></label>
                <input asp-for="Codigodefabrica" class="form-control" />
                <span asp-validation-for="Codigodefabrica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockStart" class="control-label"></label>
                <input asp-for="StockStart" class="form-control" />
                <span asp-validation-for="StockStart" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="MotosierraImg" class="control-label"></label>
                <input asp-for="MotosierraImg" class="form-control" type="file" />
               
            </div><br>
          
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div><br>

<div>
    <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
</div>
</body>

