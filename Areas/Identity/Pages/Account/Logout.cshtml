@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<body class="FondoLogin" >

    <header>
    <h2 class="">Haga click en el boton para cerrar la sesión </h2>
    <br>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-primary text-dark">Click aqui para salir</button>
            </form>
        }
        else
        {
            <p>Ha cerrado correctamente la sesión de la aplicación.</p>
        }
    }
</header>
    
</body>


